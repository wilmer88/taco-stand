  "dependencies": {
    "bcrypt": "^5.0.1",
    "chai-http": "^4.3.0",
    "concurrently": "^7.1.0",
    "core-js": "^3.25.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.17.3",
    "formidable": "^3.2.4",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.10",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
